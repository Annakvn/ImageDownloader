<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#5942f4"
    tools:context=".range">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".3">
        <EditText
            android:id="@+id/startingTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Start"
            android:background="#bebad8"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/displaybut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISPLAY"
            android:background="#9a91d8"
            android:onClick="DisplayMethod"
            android:layout_weight="1"
            />

        <EditText
            android:id="@+id/endingTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="END"
            android:background="#bebad8"
            android:layout_weight="1"/>
    </LinearLayout>

    <ListView
        android:id="@+id/ListRange"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/displaybut"
        android:layout_weight="3">

    </ListView>


</LinearLayout>